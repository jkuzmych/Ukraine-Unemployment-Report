{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {}
    },
    "include": ["src/**/*", "public/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "build"]
}