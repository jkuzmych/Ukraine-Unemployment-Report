# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript files - 2 spaces
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2

# JSON files - 2 spaces
[*.json]
indent_style = space
indent_size = 2

# CSS files - 2 spaces
[*.css]
indent_style = space
indent_size = 2

# HTML files - 2 spaces
[*.html]
indent_style = space
indent_size = 2

# Python files - 4 spaces (if you have any)
[*.py]
indent_style = space
indent_size = 4

# Markdown files - 2 spaces
[*.md]
indent_style = space
indent_size = 2

# YAML files - 2 spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

